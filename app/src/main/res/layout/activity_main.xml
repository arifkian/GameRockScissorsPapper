<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/iv_title_logo"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/tittle"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_action_com_batu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_title_logo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fl_action_com_gunting"
        tools:background="@drawable/cover">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/rock" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_action_com_gunting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_title_logo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/fl_action_com_batu"
        app:layout_constraintRight_toLeftOf="@id/fl_action_com_kertas"
        tools:background="@drawable/cover">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/scissors" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_action_com_kertas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_title_logo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/fl_action_com_gunting"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@drawable/cover">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/papper" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_image_com"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:src="@drawable/computer"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/fl_action_com_gunting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_image_vs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vs"
        app:layout_constraintTop_toBottomOf="@id/iv_image_com"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/iv_image_player"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:src="@drawable/player"
        app:layout_constraintTop_toBottomOf="@id/iv_image_vs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/fl_action_player_batu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_player"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fl_action_player_gunting"
        tools:background="@drawable/cover">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/rock" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_action_player_gunting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_player"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/fl_action_player_batu"
        app:layout_constraintRight_toLeftOf="@id/fl_action_player_kertas"
        tools:background="@drawable/cover">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/scissors" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_action_player_kertas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_player"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/fl_action_player_gunting"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@drawable/cover">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/papper" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/ib_reset"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/refresh"
        app:layout_constraintTop_toBottomOf="@id/fl_action_player_gunting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        style="?android:attr/borderlessButtonStyle"
        tools:ignore="NotSibling" />
</androidx.constraintlayout.widget.ConstraintLayout>